<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.anopheles.view.MatrixCalculatorController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox fx:id="workspace" alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" />
               </children>
            </VBox>
            <HBox fx:id="addMatrix" alignment="CENTER" prefHeight="189.0" prefWidth="1172.0">
               <children>
                  <GridPane fx:id="addMatrixGrid" alignment="CENTER" prefHeight="189.0" prefWidth="250.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Počet řádků:" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Počet sloupců:" GridPane.rowIndex="1" />
                        <Button fx:id="addMatrixButton" mnemonicParsing="false" onAction="#addMatrix" text="Vložit matici" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     </children>
                  </GridPane>
                  <VBox alignment="CENTER" prefHeight="189.0" prefWidth="174.0" spacing="15.0">
                     <children>
                        <ChoiceBox fx:id="operands" prefWidth="150.0" />
                        <Button mnemonicParsing="false" onAction="#addOperand" text="Přidat operand" />
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#calculate" text="Spočítej" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
